<style type="text/css">
  .alternatives {
    padding: 15px;
    flex-direction: column;
    align-items: center;
    display: flex;
    justify-content: space-between;
  }
  .ext-alternative-block {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  .ext-altenatives-photo img {
    width: 100%;
    border: 2px solid #49D0AC;
    border-radius: 4px;
  }
  .icons {
    flex: 0 0 16px;
    width: 16px;
    height: 16px;
    opacity: 0.9;
  }
  .list-inline {
    display: inline;
    padding: 0;
  }
  .list-inline li {
    list-style-type: none;
    display: inline;
    padding: 0;
  }
</style>

<div class= "alternatives">
  <!-- <img src="https://image.flaticon.com/icons/svg/126/126492.svg" alt="" class="icons"> -->
  <% @item.alternatives.take(3).each do|alternative| %>
  <div class="ext-alternative-block">
    <div class="ext-altenatives-photo">
      <%= image_tag alternative.photo%>
    </div>
    <ul class="list-inline">
      <li><img src="https://image.flaticon.com/icons/svg/44/44386.svg" alt="" class="icons"></li>
      <li><img src="https://image.flaticon.com/icons/svg/67/67780.svg" alt="" class="icons"></li>
      <li><img src="https://image.flaticon.com/icons/svg/34/34001.svg" alt="" class="icons"></li>
    </ul>
  </div>
  <% end %>
  <img src="https://image.flaticon.com/icons/svg/126/126490.svg" alt="" class="icons">
</div>



