<style type="text/css">
  .alternative {
    display: flex;
  }
  .alternative-image {
    flex: 0 0 70px;
  }
  .alternative-description {
    flex-grow: 1;
  }
  .alternative-link {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    z-index: 2;
    background: black;
    opacity: 0;
  }
</style>

<div class="extension">
  <h1><%= alternatives.count %>  Items</h1>
  <% alternatives.each do |alternative| %>
  <div class="alternative">
    <%= image_tag alternative.photo, class: "alternative-image" %>
    <div class="alternative-description">
      <h2><%= alternative.title %></h2>
      <p><%= alternative.brand %> . <%= alternative.price %></p>
      <%= link_to "", alternative.url, class: "alternative-link" %>
    </div>
  </div>
  <% end %>
</div>

