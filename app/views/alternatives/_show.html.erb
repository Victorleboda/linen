<style type="text/css">
  .alternatives {
    display: flex;
    flex-direction: column;
  }
  .alternative-show {
    flex: 0 0 70%;
    display: flex;
  }
  .alternative-others {
    flex-grow: 1;
  }
  .alternative {
    display: flex;
    height: 20px;
    width: 20px;
  }
  .photo {
  flex: 0 0 70%;
  }
</style>

<div class="alternatives">
  <div class="alternative-show">
    <div class="left"></div>
    <div class="photo">
    <% first_alternative = alternatives.first %>
    <%= image_tag first_alternative.photo, class: "first_photo" %>
    </div>
    <div class="right"></div>
  </div>
  <div class="alternative-others">
    <% alternatives.each do |alternative| %>
    <div class="alternative">
      <%= image_tag alternative.photo, class: "alternative-image" %>
    </div>
    <% end %>
  </div>

</div>

