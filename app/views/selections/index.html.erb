<div class="container">
  <h1>Your selection</h1>
  <% @selections.each do |selection| %>
    <div class="item">
      <div class="item-image">
        <%= image_tag selection.item.photo, class: "item-image" %>
      </div>

      <div class="item-description">
        <div class="first-line">
          <div class="title-item">
            <h2><%= selection.item.title %></h2>
            <h3> - <%= selection.item.category %> by <%= selection.item.brand.name %></h3>
            <%= link_to "Back on market place", selection.item.url, class: "market-place-btn" %>
          </div>
          <%= link_to root_path, class:"cancel" do %>
            <%= image_tag "cancel1.png" %>
          <% end %>
        </div>
        <div class="impact-description">
          <div class = "total-score <%= selection.item.color_climate %>">
            <p> <%= selection.item.calcul_climate_impact %>/100</p>
          </div>
          <section>
            <div class="impact-detail-description">
              <p><strong><i class="fa fa-globe" aria-hidden="true"></i> CLIMATE</strong></p>
              <div class="scores">
                <div class="arrow">
                  <div class="arrow arrow-status <%= selection.item.color_climate %> " style="width: <%= (selection.item.calcul_climate_impact*100).to_i %>%">
                    <p><%= selection.item.calcul_climate_impact %> kg</p>
                   <span class="arrow-pointer"></span>
                  </div>
                </div>
                <div class = "score">
                  <p> <%= selection.item.calcul_climate_impact %>/100</p>
                </div>
              </div>
            </div>


            <!-- a modifier -->
            <div class="impact-detail">
              <div class="impact-detail-description">
                <p><strong><i class="fa fa-tint" aria-hidden="true"></i> WATER</strong></p>
                <div class="scores">
                  <div class="arrow">
                    <div class="arrow-status noob">
                      <p><%= selection.item.calcul_water_impact %> g</p>
                     <span class="arrow-pointer"></span>
                    </div>
                  </div>
                  <div class = "score">
                    <p> 25/100</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="impact-detail">
              <div class="impact-detail-description">
                <p><strong><i class="fa fa-cloud" aria-hidden="true"></i> AIR</strong></p>
                <div class="scores">
                  <div class="arrow">
                    <div class="arrow-status pro">
                      <p><%= selection.item.calcul_air_impact %> mol</p>
                     <span class="arrow-pointer"></span>
                    </div>
                  </div>
                  <div class = "score">
                    <p> 65/100</p>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  <% end %>
  <p class="evaluation-rules"><em>Evaluated for the materials of 100g of product</em></p>
</div>
